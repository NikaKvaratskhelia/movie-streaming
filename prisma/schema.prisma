generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Movie {
  id            Int      @id @default(autoincrement())
  title         String
  description   String
  coverPhoto    String
  yearPublished Int
  duration      Int      @default(0)
  rating        Int      @default(0)
  genres        String[]

  producerId Int
  producer   Producer @relation(fields: [producerId], references: [id])

  actors     Actor[]
  watchlists Watchlist[]
}

model Producer {
  id          Int      @id @default(autoincrement())
  movies      Movie[]
  fullName    String
  nationality String
  dateOfBirth DateTime
  debutYear   Int
}

model Actor {
  id          Int      @id @default(autoincrement())
  movies      Movie[]
  fullName    String
  nationality String
  dateOfBirth DateTime
  debutYear   Int
}

model User {
  id         String      @id @default(uuid())
  firstName  String
  lastName   String
  email      String      @unique
  password   String
  role       Role        @default(USER)
  watchlists Watchlist[]
}

enum Role {
  USER
  ADMIN
}

model Watchlist {
  id      Int    @id @default(autoincrement())
  userId  String
  movieId Int

  user  User  @relation(fields: [userId], references: [id])
  movie Movie @relation(fields: [movieId], references: [id])

  @@unique([userId, movieId])
}
