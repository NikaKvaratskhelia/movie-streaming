generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Movie {
  id            Int    @id @default(autoincrement())
  title         String
  description   String
  coverPhoto    String
  yearPublished Int

  producerId Int
  producer   Producer @relation(fields: [producerId], references: [id])

  actors Actor[]
}

model Producer {
  id          Int      @id @default(autoincrement())
  movies      Movie[]
  fullName    String
  nationality String
  dateOfBirth DateTime
  debutYear   Int
}

model Actor {
  id          Int      @id @default(autoincrement())
  movies      Movie[]
  fullName    String
  nationality String
  dateOfBirth DateTime
  debutYear   Int
}

model User {
  id        String @id @default(uuid())
  firstName String
  lastName  String
  email     String @unique
  password  String
}
