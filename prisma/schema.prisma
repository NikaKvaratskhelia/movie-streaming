generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Movie {
  id            Int     @id @default(autoincrement())
  title         String
  description   String
  coverPhoto    String
  yearPublished Int
  duration      Int     @default(0)
  rating        Decimal @default(0) @db.Decimal(3, 1)

  genres String[] @default([])

  producerId Int
  producer   Producer @relation(fields: [producerId], references: [id], onDelete: Cascade)

  actors     Actor[]
  watchlists MovieWatchlist[]
}

model Producer {
  id          Int      @id @default(autoincrement())
  movies      Movie[]
  fullName    String
  nationality String
  dateOfBirth DateTime
  debutYear   Int
  series      Series[]
}

model Actor {
  id          Int      @id @default(autoincrement())
  movies      Movie[]
  fullName    String
  nationality String
  dateOfBirth DateTime
  debutYear   Int
  series      Series[]
}

model User {
  id               String            @id @default(uuid())
  firstName        String
  lastName         String
  email            String            @unique
  password         String
  role             Role              @default(USER)
  movieWatchlists  MovieWatchlist[]
  seriesWatchlists SeriesWatchlist[]
}

enum Role {
  USER
  ADMIN
}

model MovieWatchlist {
  id      Int    @id @default(autoincrement())
  userId  String
  movieId Int

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  movie Movie @relation(fields: [movieId], references: [id], onDelete: Cascade)

  @@unique([userId, movieId])
}

model SeriesWatchlist {
  id       Int    @id @default(autoincrement())
  userId   String
  seriesId Int

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  series Series @relation(fields: [seriesId], references: [id], onDelete: Cascade)

  @@unique([userId, seriesId])
}

model Series {
  id            Int      @id @default(autoincrement())
  title         String
  description   String
  coverPhoto    String
  yearPublished Int
  rating        Decimal  @default(0) @db.Decimal(3, 1)
  genres        String[] @default([])
  isSeries      Boolean  @default(true)

  producerId Int
  producer   Producer @relation(fields: [producerId], references: [id], onDelete: Cascade)

  actors           Actor[]
  seasons          Season[]
  seriesWatchlists SeriesWatchlist[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Season {
  id           Int @id @default(autoincrement())
  countInSerie Int
  seriesId     Int

  series   Series    @relation(fields: [seriesId], references: [id], onDelete: Cascade)
  episodes Episode[]

  createdAt DateTime @default(now())

  @@unique([seriesId, countInSerie])
}

model Episode {
  id            Int    @id @default(autoincrement())
  title         String
  description   String
  duration      Int
  countInSeason Int
  seasonId      Int

  season Season @relation(fields: [seasonId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([seasonId, countInSeason])
}
